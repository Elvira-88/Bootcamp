Algoritmo ejercicio28
	Definir temporizador, contador como entero;
	Escribir "Introduce el tiempo del temporizador.";
	Leer temporizador;
	Para contador = temporizador Hasta 1 Con Paso -1 Hacer
		Limpiar pantalla;
		Escribir contador;
		Esperar 1 segundo;
	Fin Para
	Limpiar pantalla;
	Escribir "¡¡Ring!!";
